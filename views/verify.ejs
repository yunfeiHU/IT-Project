<header>
  <% include ./partials/header %>
</header>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body border-0">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-check"></i> Email Verification
      </h1>
      <% include ./partials/messages %>
      <form action="/user/verify" method="POST">
        <div class="form-group">
          <label for="name">Verification Token</label>
          <input
            type="token"
            id="token"
            name="token"
            class="form-control"
            value="<%= typeof token != 'undefined' ? token : '' %>"
          />
          <small class="text-muted"
            >*. Enter the token we sent to your email please</small
          >
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          Verify
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/user/login">Login</a></p>
    </div>
  </div>
</div>
<footer>
  <% include ./partials/footer %>
</footer>
