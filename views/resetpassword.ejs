<header>
  <% include ./partials/header %>
</header>
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body border-0">
      <h1 class="text-center mb-3">
        <i class="fas fa-cogs"></i> Password Reset
      </h1>
      <% include ./partials/messages %>
      <form action="/user/reset/submit" method="POST">
        <div class="form-group">
          <label for="token">Enter token</label>
          <input
            type="text"
            id="token"
            name="token"
            class="form-control"
            value="<%= typeof token != 'undefined' ? token : '' %>"
          />
        </div>
        <div class="form-group">
          <input
            hidden
            type="email"
            id="email"
            name="email"
            class="form-control"
            value="<%= email %>"
          />
        </div>
        <div class="form-group">
          <label for="password">New Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="cpassword">confirm Password</label>
          <input
            type="password"
            id="cpassword"
            name="cpassword"
            class="form-control"
            value="<%= typeof cpassword != 'undefined' ? cpassword : '' %>"
          />
        </div>
        <button class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>

<footer>
  <% include ./partials/footer %>
</footer>
